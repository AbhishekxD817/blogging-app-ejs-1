<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body class="posts-body">
    <center>
        <h1>All Posts</h1>
        <nav>
            <ul>
                <li>&#8618;<a href="/">Home</a></li>
                <li>&#8618;<a href="/posts">All Posts</a></li>
                <li>&#8618;<a href="/posts/new">Create Post</a></li>
            </ul>
        </nav>
        <div class="posts-container">

            <% posts.forEach(post => { %>
                <div class="post">
                    <h4>@<%= post.username %></h4>
                    <h5>Followers:<%= post.followers %> | Following:<%= post.following %></h5>
                    <p><%= post.content %></p>
                    <span>&#10084; <%= post.likes %></span>


                    <div class="tags-container">
                        <% for( let i = 0; i < post.tags.length; i++ ) { %>
                            <span><%= post.tags[i] %></span>
                        <% } %>
                    </div>

                    <button><a href="/posts/<%= post.post_id %>">View Post</a></button>
                </div>
            <% }) %>

        </div>
    </center>
</body>
</html>